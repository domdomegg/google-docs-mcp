{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.domdomegg/google-docs-mcp",
  "title": "Google Docs",
  "description": "Allow AI systems to read and edit Google Docs.",
  "websiteUrl": "https://github.com/domdomegg/google-docs-mcp#readme",
  "repository": {
    "url": "https://github.com/domdomegg/google-docs-mcp.git",
    "source": "github"
  },
  "version": "{{VERSION}}",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "google-docs-mcp",
      "version": "{{VERSION}}",
      "runtimeHint": "npx",
      "environmentVariables": [
        {
          "name": "GOOGLE_ACCESS_TOKEN",
          "description": "Google OAuth access token with Docs scope.",
          "isRequired": true,
          "isSecret": true
        }
      ],
      "transport": {
        "type": "stdio"
      }
    },
    {
      "registryType": "npm",
      "identifier": "google-docs-mcp",
      "version": "{{VERSION}}",
      "runtimeHint": "npx",
      "environmentVariables": [
        {
          "name": "MCP_TRANSPORT",
          "description": "Transport type.",
          "isRequired": true,
          "isSecret": false,
          "value": "http"
        },
        {
          "name": "GOOGLE_CLIENT_ID",
          "description": "Google OAuth client ID.",
          "isRequired": true,
          "isSecret": false
        },
        {
          "name": "GOOGLE_CLIENT_SECRET",
          "description": "Google OAuth client secret.",
          "isRequired": true,
          "isSecret": true
        }
      ],
      "transport": {
        "type": "streamable-http",
        "url": "http://localhost:3000/mcp"
      }
    }
  ]
}
